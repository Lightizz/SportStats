<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="95dp">

    <ImageView
        android:id="@+id/item_values_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_values_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/item_values_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_values_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:src="@drawable/ic_add"
        android:id="@+id/item_values_more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_values_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/item_values_value"
        android:layout_marginEnd="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_values_more"
        app:layout_constraintEnd_toStartOf="@+id/item_values_more"
        app:layout_constraintTop_toTopOf="@+id/item_values_more" />

    <ImageView
        android:src="@drawable/ic_less"
        android:id="@+id/item_values_less"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_values_value"
        app:layout_constraintEnd_toStartOf="@+id/item_values_value"
        app:layout_constraintTop_toTopOf="@+id/item_values_value" />

</androidx.constraintlayout.widget.ConstraintLayout>